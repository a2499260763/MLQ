@model UserModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>编辑用户</title>
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div>
        @using (Html.BeginForm("Updatetwo", "Jurisdiction", FormMethod.Post))
        {
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">您正在做的业务是：人力资源--权限管理--编辑用户</font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="submit" value="保存" class="BUTTON_STYLE1" />
                        <input type="button" value="返回" class="BUTTON_STYLE1"
                               onclick="history.back()">
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=3 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td class="TD_STYLE1">
                        @Html.Label("用户名称")
                        @Html.Hidden("user_id", Model.user_id, new { @readonly = "readonly", @class = "INPUT_STYLE1" })
                    </td>
                    <td class="TD_STYLE2">

                        @Html.TextBox("user_name", Model.user_name, new { @class = "INPUT_STYLE1", @name = "cpc.attributeKind" })
                        @Html.ValidationMessage("user_name")
                    </td>
                    <td class="TD_STYLE1">@Html.Label("用户密码")</td>
                    <td class="TD_STYLE2">

                        @Html.TextBox("user_password", Model.user_password, new { @class = "INPUT_STYLE1", @name = "cpc.attributeKind" })
                        @Html.ValidationMessage("user_password")
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">@Html.Label("真实姓名")</td>
                    <td class="TD_STYLE2">
                        @Html.TextBox("user_true_name", Model.user_true_name, new { @class = "INPUT_STYLE1", @name = "users.userTrueName" })
                        @Html.ValidationMessage("user_true_name")

                    </td>
                    <td class="TD_STYLE1">@Html.Label("用户身份")</td>
                    <td class="TD_STYLE2">

                        @Html.DropDownList("Role_id", ViewBag.sl as IEnumerable<SelectListItem>, new { @class = "form-control" })

                        @*<select name="users.sysRole.roleId">

                                <option value="1">人事专员</option>

                                <option value="2">人事经理</option>

                                <option value="3">薪酬专员</option>

                                <option value="4">薪酬经理</option>

                                <option value="5">招聘专员</option>

                                <option value="6">招聘经理</option>

                                <option value="7">应聘者</option>

                                <option value="8">系统管理员</option>

                            </select>*@
                    </td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
