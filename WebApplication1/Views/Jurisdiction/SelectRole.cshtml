@model RoleModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>角色管理</title>
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/javascript/vue-2.4.0.js"></script>
</head>
<body>
    <div id="zh">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--权限管理--角色管理 </font>
                </td>
            </tr>
            <tr>
                <td>
                    当前角色总数：{{JueNum}}例
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="button" value="添加角色" class="BUTTON_STYLE1" v-on:click="add()" >
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=5 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr class="TR_STYLE1">
                <td class="TD_STYLE1">
                    角色编号
                </td>
                <td class="TD_STYLE1">
                    角色名称
                </td>
                <td class="TD_STYLE1">
                    角色说明
                </td>
                <td class="TD_STYLE1">
                    是否可用
                </td>
                <td class="TD_STYLE1">
                    操作
                </td>
            </tr>

            <tr class="TR_STYLE2" v-for="(item,i) in nums">
                <td class="TD_STYLE2">
                    {{item.Role_id}}
                </td>
                <td class="TD_STYLE2">
                    {{item.Role_Name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.Role_shuo}}
                </td>
                <td class="TD_STYLE2">
                   {{item.Role_bool}}

                </td>
                <td class="TD_STYLE2">
                    <img src="../../images/bt_edit.gif" title="编辑" style="cursor:pointer;" v-on:click="up(item.Role_id)" />
                    <img src="../../images/bt_del.gif" title="删除" style="cursor:pointer;"  v-on:click="sc(item.Role_id)"  />
                </td>
            </tr>
            </table>
            @*<tr class="TR_STYLE2">
                <td class="TD_STYLE2">
                    1
                </td>
                <td class="TD_STYLE2">
                    人事专员
                </td>
                <td class="TD_STYLE2"></td>
                <td class="TD_STYLE2">
                    是

                </td>
                <td class="TD_STYLE2">
                    <img src="../../images/bt_edit.gif" title="编辑" style="cursor:pointer;" onclick="location.href='right_list_information.html'" />
                    <img src="../../images/bt_del.gif" title="删除" style="cursor:pointer;" onclick="doDelete(1)" />
                </td>
            </tr>*@



            <p style="text-align:center;">
                <a v-on:click="Prev">上一页</a>
                {{currentPage}}
                <a v-on:click="Next">下一页</a> &nbsp;&nbsp;&nbsp;
            </p>
    </div>
    <script type="text/javascript">
        var va = new Vue({
            el: "#zh",
            data: {
                nums: "",
                rows: 0,
                currentPage: 1,
                PageSize: 3,
                pages: 0,
                JueNum: 1,
            },
            methods: {
                FenYe: function () {
                    var t = this;
                    $.ajax({
                        url: "../Jurisdiction/Index3",
                        type: "post",
                        data: "currentPage=" + t.currentPage + "&PageSize=" + t.PageSize,
                        success: function (rs) {
                            t.nums = eval("(" + rs + ")");
                            $.ajax({
                                url: "../Jurisdiction/GetRow1",
                                type: "post",
                                success: function (rs) {
                                    t.rows = rs;
                                    t.pages = Math.ceil(t.rows / t.PageSize);
                                }
                            });
                        }
                    });
                },
                Next: function () {
                    if (this.currentPage + 1 <= this.pages) {
                        this.currentPage += 1;
                    }
                    this.FenYe();
                },
                Prev: function () {
                    if (this.currentPage - 1 >= 1) {
                        this.currentPage -= 1;
                    }
                    this.FenYe();
                },
                sc: function (id) {
                    if (confirm("确定删除此角色吗？")) {
                        alert("删除成功")
                        location = "../Jurisdiction/Del1/" + id;
                    }
                },
                Jueshu: function () {
                    var t=this
                    $.ajax({
                        url: "../Jurisdiction/Jueshu",
                        type: "get",
                        success: function (msg) {
                          
                            t.JueNum = eval("" + msg + "");
                        }
                    });
                
                },
                up: function (id) {
                    if (confirm("确定修改此角色吗？")) {
                      
                        location = '../Jurisdiction/UpdeteResult/' + id;
                    }

                },
                add: function () {
                    location = "../Jurisdiction/RoleAdd";
                }
            },
                created: function () {
                    this.FenYe();
                }
            })
    </script>
</body>
</html>
