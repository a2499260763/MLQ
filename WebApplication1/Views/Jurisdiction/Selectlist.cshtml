        <p style="text-align:center;">
            <a v-on:click="Prev">上一页</a>
            {{currentPage}}
            <a v-on:click="Next">下一页</a> &nbsp;&nbsp;&nbsp;
        </p>
    </div>
    <script type="text/javascript">
        var va = new Vue({
            el: "#zh",
            data: {
                nums: "",
                rows: 0,
                currentPage: 1,
                PageSize: 3,
                pages: 0,
                JueNum:1,
            },
            methods: {
                FenYe: function () {
                    var t = this;
                    $.ajax({
                        url: "../Jurisdiction/Index2",
                        type: "post",
                        data: "currentPage=" + t.currentPage + "&PageSize=" + t.PageSize,
                        success: function (rs) {
                            t.nums = eval("(" + rs + ")");
                            $.ajax({
                                url: "../Jurisdiction/GetRow",
                                type: "post",
                                success: function (rs) {
                                    t.rows = rs;
                                    t.pages = Math.ceil(t.rows / t.PageSize);
                                }
                            });
                        }
                    });
                },
                Next: function () {
                    if (this.currentPage + 1 <= this.pages) {
                        this.currentPage += 1;
                    }
                    this.FenYe();
                },
                Prev: function () {
                    if (this.currentPage - 1 >= 1) {
                        this.currentPage -= 1;
                    }
                    this.FenYe();
                },
                sc: function (id) {
                    if (confirm("确定删除此用户吗？")) {
                        alert("删除成功")
                        location = "../Jurisdiction/Del/" + id;
                    }
                },
                Updatetwo: function (twoID) {
                    location.href = '../Jurisdiction/SelectWheretwo/' + twoID;
                },
                addtwo: function () {
                    location.href = '../Jurisdiction/user_add';
                },
                Jueshu: function () {
                    var t=this
                    $.ajax({
                        url: "../Jurisdiction/Jueshu",
                        type: "get",
                        success: function (msg) {
                          
                            t.JueNum = eval("" + msg + "");
                        }
                    });
                }
            },
            created: function () {
                this.FenYe();
                this.Jueshu();
            }
        })
    </script>
</body>
</html>
