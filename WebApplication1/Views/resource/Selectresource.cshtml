
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Selectresource</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/javascript/vue-2.4.0.js"></script>
</head>
<body>
    <div id="div123"> 
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--人力资源档案管理--人力资源档案登记复核 </font>
                </td>
            </tr>
            <tr>
                <td>
                    当前等待复核的人力资源档案总数： {{pages}} 例
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=5 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr class="TR_STYLE1">
                <td width="13%" class="TD_STYLE1">
                    档案编号
                </td>
                <td width="13%" class="TD_STYLE1">
                    姓名
                </td>
                <td width="11%" class="TD_STYLE1">
                    性别
                </td>
                <td width="14%" class="TD_STYLE1">
                    I级机构
                </td>
                <td width="14%" class="TD_STYLE1">
                    II级机构
                </td>
                <td width="14%" class="TD_STYLE1">
                    III级机构
                </td>
                <td width="14%" class="TD_STYLE1">
                    职称
                </td>
                <td width="7%" class="TD_STYLE1">
                    复核
                </td>
            </tr>

            <tr v-for="(item,index) in nums" >
                <td class="TD_STYLE2">
                    {{item.RCode}}
                </td>
                <td class="TD_STYLE2">
                    {{item.RName}}
                </td>
                <td class="TD_STYLE2">
                    {{item.RSex}}
                </td>
                <td class="TD_STYLE2">
                    {{item.oneCodeName}}
                </td>
                <td class="TD_STYLE2">
                    {{item.twoCodeName}}
                </td>
                <td class="TD_STYLE2">
                    {{item.threeCodeName}}
                </td>
                <td class="TD_STYLE2">
                    {{item.MWei}}
                </td>
                <td class="TD_STYLE2">
                    <a v-on:click="fuhe(item.RCode)">复核</a>
                </td>
            </tr>

        </table>
        <p style="text-align: center;">
            <a  style="color:black;" v-on:click="first">首页</a>
            <a  style="color:black;"  v-on:click="Prev">上一页</a>




            <font style="color:red;">{{currentPage}}</font>





            <a  style="color:black;"v-on:click="Next">下一页</a>
            <a  style="color:black;"v-on:click="last">尾页</a>

        </p>
    </div>
    <script type="text/javascript">
        var vue = new Vue({
            el: "#div123",
            data: {
                nums: "",
                rows: 0,
                currentPage: 1,
                PageSize: 1,
                pages: 0,
                RState: "未复核",
                RRState:0,
            },
            methods: {
                FenYe: function () {
                    var t = this;
                    $.ajax({
                        url: "../resource/FenYeresource",
                        type: "post",
                        data: "RRState=" + t.RRState + "&RState=" + t.RState + "&currentPage=" + t.currentPage + "&PageSize=" + t.PageSize,
                        success: function (msg) {
                            t.nums = eval("(" + msg + ")")["list"];
                            t.rows = eval("(" + msg + ")")["rows"];
                            t.pages = Math.ceil(t.rows / t.PageSize);
                        }
                    })
                },
                fuhe: function (RCode) {
                    location.href = '../resource/UpdateresourceState?RCode=' + RCode ;
                },
                Next: function () {
                    if (this.currentPage + 1 <= this.pages) {
                        this.currentPage += 1;
                    }
                    this.FenYe();
                },
                Prev: function () {
                    if (this.currentPage - 1 >= 1) {
                        this.currentPage -= 1;
                    }
                    this.FenYe();
                },
                first: function () {
                    this.currentPage = 1;
                    this.FenYe();
                },
                last: function () {
                    this.currentPage = this.pages;
                    this.FenYe();
                },
            },
            
            created: function () {
                this.FenYe();
            }

        })
    </script>
</body>
</html>
